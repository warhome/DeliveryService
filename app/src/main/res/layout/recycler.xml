<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:paddingBottom="8dp"
    android:background="@android:color/white"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:padding="0dp"
        >
        <TextView
            android:id="@+id/parcelName"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="45dp"
            android:layout_marginTop="16dp"  />
        <TextView
            android:id="@+id/deliveryDate"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:textSize="16sp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_below="@id/parcelName"/>
        <TextView
            android:id="@+id/destinationAddress"
            android:layout_width="match_parent"
            android:textSize="16sp"
            android:layout_height="25dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="120dp"
            android:layout_below="@+id/deliveryDate" />
        <Button
            android:id="@+id/showInMapButton"
            android:background="@drawable/map_marker"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp" />
        <TextView
            android:id="@+id/recyclerStatusValue"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/deliveryDate"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:text="Завершённая"
            android:textSize="16sp" />
    </RelativeLayout>
</LinearLayout>